<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/full_transparent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/sectiontest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/first_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null" />

        <ListView
            android:id="@+id/second_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/basics_ok"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/show_photo_btn"
                android:gravity="center"
                android:text="@string/custom_ok"
                android:textColor="@color/app_bottom_tab_color"
                android:textSize="14sp" />
            <com.inspection.powerline.widgt.ClearEditText

                android:id="@+id/basics_text"
                android:layout_above="@+id/basics_pop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="请输入"
                android:textColor="@color/app_bottom_tab_color"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:visibility="gone"

                />


            <TextView
                android:id="@+id/basics_pop"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/show_photo_btn"
                android:gravity="center"
                android:text="@string/custom_"
                android:textColor="@color/app_bottom_tab_color"
                android:textSize="14sp" />

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>